<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:layout_gravity="center"
        android:background="@drawable/pop_bg"
        android:orientation="vertical"
        android:padding="5dp"
        tools:context="com.bento.a.PopUpPerfilMy">

        <TextView
            android:id="@+id/exit_m"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/popupBack"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_dog1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/perfil_circle" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_dog2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/perfil_circle" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_dog3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/perfil_circle" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_dog4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/perfil_circle" />

            </LinearLayout>

            <TextView
                android:id="@+id/tipo_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:text="Cachorro"
                android:textStyle="bold" />
        </LinearLayout>

        <RadioGroup
            android:id="@+id/radbut_porte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text=" Porte: "
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/porte_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:text="pequeno"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/porte_grande"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grande"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/porte_medio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Médio"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/porte_pequeno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pequeno"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radbut_idade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text=" Idade: "
                android:textAlignment="center"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/idade_ani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:text="Filhote"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/filhote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="Filhote "
                android:textAlignment="center"
                android:textColor="#FF000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/adulto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adulto "
                android:textAlignment="center"
                android:textColor="#FF000000"
                android:textSize="14sp"
                android:visibility="gone" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radbut_castrado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text=" Castrado: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/castrado_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:text="Sim"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/castrado_sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Sim"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/castrado_nao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />
        </RadioGroup>

        <RadioGroup
            android:id="@+id/radbut_vacina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text=" Vacinado: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/vacinado_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:text="Sim"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/vacinado_sim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="Sim"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/vacinado_nao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Não"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text=" Raça: "
                android:textStyle="bold" />

            <EditText
                android:id="@+id/raca_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:fontFamily="@font/montserrat"
                android:text="Pastor Alemão"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <RadioGroup
            android:id="@+id/radbut_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text=" Status: "
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat"
                android:text="Adoção"
                android:textStyle="bold"
                android:visibility="visible" />

            <RadioButton
                android:id="@+id/ani_adot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:text="Adoção"
                android:textAlignment="center"
                android:textColor="#FF000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/ani_perdido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perdido"
                android:textAlignment="center"
                android:textColor="#FF000000"
                android:textSize="14sp"
                android:visibility="gone" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text=" Descrição "
                android:textStyle="bold" />

        </LinearLayout>

        <EditText
            android:id="@+id/desc_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/but_editar"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text="Editar"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <Button
                android:id="@+id/but_back"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text="Voltar"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/but_aplicar"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:text="Aplicar"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.bento.a.PopUpMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="horizontal">

        <TextView
        android:id="@+id/txtclose"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="@color/popupBack"
        android:layout_marginTop="10dp"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/circle_bg_pop" />

        <TextView
            android:id="@+id/desc_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat"
            android:layout_marginStart="10dp"
            android:text="Descrição"
            android:textSize="25sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="60dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_dog"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/perfil_circle"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_dog1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/perfil_circle"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_dog2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:background="@drawable/perfil_circle"/>

        </LinearLayout>
    </LinearLayout>
        <TextView
            android:id="@+id/tipo_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cachorro"
            android:fontFamily="@font/montserrat"
            android:layout_marginTop="5dp"
            android:textStyle="bold"/>


        <LinearLayout
            android:id="@+id/radbut_porte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cad_dog_box"
                android:text=" Porte: "
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/porte_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pequeno"
                android:fontFamily="@font/montserrat"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_marginStart="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/radbut_idade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/cad_dog_box"
                android:text=" Idade: "
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/idade_ani"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filhote"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/radbut_vacina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Vacinado: "
                android:background="@drawable/cad_dog_box"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold" />
            <TextView
                android:fontFamily="@font/montserrat"
                android:id="@+id/vacinado_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                android:text="Sim"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Raça: "
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:background="@drawable/cad_dog_box"/>

            <TextView
                android:id="@+id/raca_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/montserrat"
                android:text="Pastor Alemão"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/radbut_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Status: "
                android:textStyle="bold"
                android:fontFamily="@font/montserrat"
                android:background="@drawable/cad_dog_box"/>
            <TextView
                android:id="@+id/status_animal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Adoção"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:visibility="visible"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Descrição "
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:background="@drawable/cad_dog_box"/>

        </LinearLayout>

        <TextView
            android:id="@+id/desc_animal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:fontFamily="@font/montserrat"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>




</RelativeLayout>